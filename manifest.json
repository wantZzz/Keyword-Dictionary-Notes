{
    "manifest_version": 3,
    "name": "Keyword Dictionary Notes",
    "version": "0.0.0",
    "description": "A browser extension that can record notes based on keywords on various websites",
    "permissions": [
		"activeTab",
        "storage",
		"scripting",
		"notifications",
		"sidePanel",
		"contextMenus",
		"commands"
    ],
	"host_permissions": ["https://*/*", "http://*/*"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
	"icons": {
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{"matches": ["https://*/*", "http://*/*"],
		  "js": [
			"content-script/content-script.js"
		  ],
		  "css": [
			"content-script/content-script.css"
		  ],
		  "run_at": "document_end"
		}
	],
	"side_panel": {
		"default_path": "sidepanel/sidepanel.html",
		"openPanelOnActionClick": false
	},
	"commands": {
		"KDN_SearchKeyword": {
			"suggested_key": "Ctrl+Shift+F",
			"description": "Search/show/hide keywords in web pages"
		},
		"KDN_Sidepanel": {
			"suggested_key": "Ctrl+Shift+O",
			"description": "Open sidepanel notebook"
		}
	},
	"options_page": "setting_page/setting.html"
}