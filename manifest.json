{
    "manifest_version": 3,
    "name": "Keyword Dictionary Notes",
    "version": "0.1.0",
    "description": "__MSG_manifest_description__",
	"default_locale": "zh",
    "permissions": [
		"activeTab",
        "storage",
		"scripting",
		"notifications",
		"sidePanel",
		"contextMenus",
		"commands",
		"identity",
		"identity.email"
    ],
	"host_permissions": ["https://*/*", "http://*/*"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
	"icons": {
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"content_scripts": [
		{"matches": ["https://*/*", "http://*/*"],
		  "js": [
			"content-script/content-script.js"
		  ],
		  "css": [
			"content-script/content-script.css"
		  ],
		  "run_at": "document_end"
		}
	],
	"side_panel": {
		"default_path": "sidepanel/sidepanel.html",
		"openPanelOnActionClick": false
	},
	"commands": {
		"KDN_SearchKeyword": {
			"suggested_key": "Ctrl+Shift+F",
			"description": "Search/show/hide keywords in web pages"
		},
		"KDN_Sidepanel": {
			"suggested_key": "Ctrl+Shift+O",
			"description": "Open sidepanel notebook"
		}
	},
	"options_page": "setting_page/setting.html",
	"web_accessible_resources": [
		{
			"resources": ["images/*.png"],
			"extension_ids": ["*"]
		},
		{
			"resources": ["data_file/init_tagdata.json"],
			"extension_ids": ["*"]
		},
		{
			"resources": ["module/*.js"],
			"extension_ids": ["*"]
		}
	],
	"oauth2": {
		"client_id": "319739714364-g6pej5j7c5usjetg25b5ua7i24g03ce4.apps.googleusercontent.com",
		"scopes": [
			"https://www.googleapis.com/auth/documents",
			"https://www.googleapis.com/auth/userinfo.email"
		]
	}
}